<div class='box box-form'>
  <div class='container'>
    <div class='col-md-4 col-md-offset-4'>
      <div class='box-header'>
        <h1><%= link_to "#{image_tag 'logo6.png'}".html_safe, root_path %></h1>
      </div>
      <div class='box-content'>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class='form-group'>
            <label>Email or Username</label>
            <%= f.text_field :login, class: "form-control", required: true %>
          </div>
          <div class='form-group'>
            <label>Password</label>
            <%= f.password_field :password, class: "form-control", required: true %>
          </div>
          <div class='button'>
            <%= f.submit "SignIn", class: "btn btn-login btn-login-submit btn-success" %>
          </div>
          <div class="form-group">
            <div class="pull-left">
              Not Member Yet? <%= link_to 'Register', new_registration_path(resource_name) %>
            </div>
            <div class="pull-right">
              <%= link_to 'Forgot Password?', new_user_password_path %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
