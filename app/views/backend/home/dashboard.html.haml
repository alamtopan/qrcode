.container
  .row
    .col-xs-12
      %br
      = javascript_include_tag "//www.google.com/jsapi", "chartkick"
      .well
        %h4{align: 'center'} Statistik Attendance Students
      = column_chart @attendances.per_year.group_by_month('attendances.created_at').count
      %br
      %ul.today-datas.display-center
        %li
          .datas-text
            %b 
              = @attendances.count_today
            %br 
            Attendance Today
        %li
          .datas-text
            %b 
              = @attendances.count_week
            %br 
            Attendance This Week
        %li
          .datas-text
            %b 
              = @attendances.count_month
            %br 
            Attendance This Month
        %li
          .datas-text
            %b 
              = @attendances.count_year
            %br 
            Attendance This Year
        %li
          .datas-text
            %b 
              = @attendances.count
            %br 
            Attendance till date
      .chart
        %canvas#number_visitors